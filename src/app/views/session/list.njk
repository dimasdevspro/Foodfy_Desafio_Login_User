{% extends "layout.njk" %}

{% block content %}

  <div id="admin-chef-title">
    <p>Usu√°rios</p>
    <div class="header">
      <a id="button-create" href="/admin/users/register">Novo</a>
      <form action="/chefs" method="GET">
        <input 
        type="text" 
        name="filter" 
        placeholder="Filtrar por Nome"
        value="{{filter}}">
        <button id="button-filter" type="submit">Filtrar</button>
      </form>
    </div>
  </div>
  <div class="container_cards_users">
    {% for users in user %}
      <div class="cards_users">
        <div class="users">
            <p>{{user.name}}</p>
             <p>{{user.email}}</p>
         <form class="form-user" method="post" action="/admin/profile?_method=PUT">
        <button class="" type="submit">Editar</button>      
        <input type="hidden" name="id" value="{{user.id}}">
        </form>
        <form class="form-user" method="post" action="/admin/profile?_method=DELETE">
        <button class="" type="submit">Deletar</button>      
        <input type="hidden" name="id" value="{{user.id}}">
        </form>
    </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <div 
  class="pagination" 
  data-page={{pagination.page}} 
  data-total={{pagination.total}}
  data-filter={{filter}}
  ></div>

{% endblock %}