{% extends "layout.njk"%}

{% block content %}

  <section class="form-login">
    <form method="post" action="admin/user/login">
     
      <div class="field user-login">
         <div class="login-user">
        <label>Iniciar Sess√£o</label>
      </div>
        <div class="field user input">
          <p>Nome</p>
          <input type="text" name="name" id="nam" value="{{user.name}}" placeholder="Digite o nome completo">
        </div>

        <div class="field user input">
          <p>Senha</p>
          <input type="password" name="password" id="pass" value="{{user.password}}" placeholder="Digite sua senha">
        </div>
      </div>

      <button class="button" type="submit">Entrar</button>
      <div class="footer">
        <ul>
          <li>
            <a href="/admin/user/register">Registre-se</a>
          </li>
          <li>
            <a href="/admin/user/forgot-password">Esqueci minha senha</a>
          </li>
        </ul>
      </div>
    </form>
  </section>

{% endblock %}