{% extends "layout.njk" %}

{% block content %}
    <div class="comum_div">
        <form style="position: absolute; width: 940px; " id="form-del" method="post" action="/admin/user/delete?_method=DELETE">
            <input type="hidden" name="id" value="{{user.id}}">
            <div class="admin-user" style="margin-left: 800px;">
                <button id="del" type="submit">Deletar</button>
            </div>
        </form>
        <form class="form-newadmin" method="post" action="/admin/user/edit">
            <div class="adm-user">
                <div style="float:left">
                    <label>Editar</label>
                </div>
                 <button style="float:right" id="sav2" type="submit">Salvar</button>
            </div>
            {% include "session/fields.njk" %}
            <input type="hidden" name="id" value="{{user.id}}">
        </form>
    </div>
    <script>
        const formDelete = document.querySelector("#form-del");
        formDelete.addEventListener("submit", function (event) {
            const confirmation = confirm("Deseja Deletar?")
            if (!confirmation) {
                event.preventDefault();
            }
        })
    </script>
{% endblock %}