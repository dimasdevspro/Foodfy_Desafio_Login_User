{% extends "layout.njk"%}

{% block content %}

  <section class="form-forgot">
    <form method="post" action="/admin/users">
     
      <div class="field user-password">
         <div class="forgot-password">
        <label>Esqueceu a Senha?</label>
      </div>
        <div class="field user input">
          <p>Email</p>
          <input type="mail" name="name" id="nam" value="{{user.name}}" placeholder="Digite o e-mail cadastrado.">
        </div>
        <button class="button-forgot" type="submit">Recuperar</button>
      </div>
      </div>
    </form>
  </section>

{% endblock %}