{% extends "layout.njk" %}

{% block content %}

  <div id="admin-recipe-title">
    <p>Gerenciar Receitas</p>
  <div class="header">
    <a id="button-create" href="/recipes/create">Cadastrar</a>
      <form action="/recipes/search" method="GET">
        <input 
        type="text" 
        name="filter" 
        placeholder="Filtrar por Receita"
        value="{{filter}}">
        <button id="button-filter" type="submit">Filtrar</button>
      </form>
    </div>
  </div>

  {% import "parts/section-products.njk" as section %}

  <div 
  class="pagination" 
  data-page={{pagination.page}} 
  data-total={{pagination.total}}
  data-filter={{filter}}
  ></div>

{% endblock %}