{% extends "layout.njk" %}

{% block content %}
 <div class="comum_div">
  <section class="card_recipe">

<div class="adm-recipe">
  <div style="float:left;">
      <label class="subtitles_recipe_id">Receita: {{recipe.title}}</label>
  </div>
  <div style="float:right;">
      <a href="/recipes/{{recipe.id}}/edit"><button id="edt" type="submit">Editar receita</button></a>
  </div>  
    </div>
      <div class="highlight">
        {% if not dataFile[0].src %}
      <img src="http://placehold.it/500x500?text=PRODUTO SEM FOTO" alt=""/>
      {% else %}
      <img 
      src="{{dataFile[0].src}}" 
      alt="{{dataFile[0].filename}}"
      onclick="Lightbox.open()"
      >
      {% endif %}
    <div class="lightbox-target">
      <img src="{{dataFile[0].src}}" alt="{{dataFile[0].name}}">
    <a 
    href="#" 
    class="lightbox-close"
    onclick="Lightbox.close()"
    >
      <i class="material-icons">
        close
      </i>
    </a>
    </div>
      </div>
      <div class="gallery-preview">
        {% for image in dataFile %}
        <img 
        src="{{image.src}}" 
        alt="{{image.filename}}"
        {% if loop.index0 == 0 %}
        class="active"
        {% endif %}
        onclick="ImageGallery.setImage(event)"
        >
        {% endfor %}

      </div>
    

    <div class="title_recipe_id">
      <p>{{recipe.title}}</p>
    </div>

    <div class="author_recipe_id">
      <p>por {{recipe.author}}</p>
    </div>

    <div class="topic-ingredients">

      <div class="grid_recipe_id">
        <p class="subtitles_recipe_id">Ingredientes</p>
        <h4>Esconder</h4>
      </div>

      <div class="ingredients">
        <ul>
          {% for ingredient in recipe.ingredients %}
            <li>
              {{ingredient}}
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>

    <div class="topic-preparation">

      <div class="grid_recipe_id">
        <p class="subtitles_recipe_id">Modo de Preparo</p>
        <h4>Esconder</h4>
      </div>

      <div class="preparation">
        <ul>
          {% for preparation in recipe.preparations %}
            <li>
              {{preparation}}
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>

    <div class="topic-information">

      <div class="grid_recipe_id">
        <p class="subtitles_recipe_id">Informações Adicionais</p>
        <h4>Esconder</h4>
      </div>

      <div class="information">
        <p>{{recipe.informations}}</p>
      </div>

    </div>

  </section>
</div>


{% endblock %}